<h1>Add Game</h1>

<form class="" action="/games" method="post">

  <label for="title">Title: </label>
  <input type="text" name="title" id="title">
  <br><br>

  <label for="stock">Stock: </label>
  <input type="number" name="stock" id="stock">
  <br><br>

  <label for="publisher-id">Select Publisher:</label>
      <select name="publisher_id" id="publisher-select">
        <% @publishers.each do |publisher| %>
            <option value=<%= publisher.id %>><%= publisher.name.capitalize %></option>
        <% end %>
      </select>
  <br><br>

  <input type="submit" value="Add Game"/>

</form>
