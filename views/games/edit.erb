<h1>Edit Game</h1>

<form class="" action="/games/<%= @game.id %>" method="post">

  <label for="title">Title: </label>
  <input type="text" name="title" value="<%= @game.title %>" id="title" required>
  <br><br>

  <label for="stock">Stock: </label>
  <input type="number" name="stock" value="<%= @game.stock %>" id="stock">
  <br><br>

  <label for="genre-select">Select Genre:</label>
  <select name="genre_id" id="genre-select">
    <% @genres.each do |genre| %>
    <% if genre.id == @game.genre_id %>
      <option value=<%= genre.id %> selected><%= genre.name %></option>
    <% else %>
      <option value=<%= genre.id %>><%= genre.name %></option>
    <% end %>
    <% end %>
  </select>
  <br><br>

  <label for="publisher-select">Select Publisher:</label>
  <select name="publisher_id" id="publisher-select" selected="<%= @game.publisher_id %>">
    <% @publishers.each do |publisher| %>
    <% if publisher.id == @game.publisher_id %>
      <option value=<%= publisher.id %> selected><%= publisher.name.capitalize %></option>
    <% else %>
      <option value=<%= publisher.id %>><%= publisher.name.capitalize %></option>
    <% end %>
    <% end %>
  </select>
  <br><br>

  <input class="btn" type="submit" value="Edit Game"/>

  <br><br>

</form>
